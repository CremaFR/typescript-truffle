{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "noLib": false,
    "jsx": "react",
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es5",
      "es6",
      "es7"
    ],
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
